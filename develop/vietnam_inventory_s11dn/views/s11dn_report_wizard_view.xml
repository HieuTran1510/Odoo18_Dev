<odoo>
    <record id="view_vietnam_s11dn_report_wizard_form" model="ir.ui.view">
        <field name="name">vietnam.s11dn.report.wizard.form</field>
        <field name="model">vietnam.s11dn.report.wizard</field>
        <field name="arch" type="xml">
            <form string="BẢNG KÊ NHẬP - XUẤT - TỒN HÀNG HÓA">
                <group>
                    <group string="NGÀY">
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <group string="KHO">
                        <field name="company_id" readonly="1"/>
                        <field name="warehouse_id"/>
                        <field name="location_id"/>
                        <field name="product_categ_id"/>
                    </group>
                </group>
                <footer>
                    <button name="action_print_report" string="In" type="object" class="btn-primary"/>
                    <button name="action_export_excel" string="Xuất Excel" type="object" class="btn-secondary"/>
                    <button string="Hủy" class="btn-link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_vietnam_s11dn_report_wizard" model="ir.actions.act_window">
        <field name="name">Bảng kê nhập - xuất - tồn hàng hóa (S11-DN)</field>
        <field name="res_model">vietnam.s11dn.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
