<!-- my_product_tags/views/product_category_views.xml -->
<odoo>
  <record id="product_category_form_view_inherit_users" model="ir.ui.view">
    <field name="name">product.category.form.inherit.users</field>
    <field name="model">product.category</field>
    <field name="inherit_id" ref="product.product_category_form_view"/>
    <field name="arch" type="xml">
      <field name="parent_id" position="after">
        <group string="Access">
          <field name="assigned_user_ids" widget="many2many_tags"/>
        </group>
      </field>
    </field>
  </record>
</odoo>
